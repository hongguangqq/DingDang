<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_modify_hint"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/flower_green"
        android:text="请输入新的用户名"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:gravity="center"/>
    <EditText
        android:id="@+id/et_modify_oldpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:lines="1"
        android:textColor="@color/black"
        android:hint="请输入旧的密码"
        android:gravity="left"/>
    <EditText
        android:id="@+id/et_modify_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:lines="1"
        android:textColor="@color/black"
        android:hint="请输入新的密码"
        android:gravity="left"/>
    <EditText
        android:id="@+id/et_modify_newpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:lines="1"
        android:textColor="@color/black"
        android:hint="请再次输入密码"
        android:gravity="left"/>
</LinearLayout>