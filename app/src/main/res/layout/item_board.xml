<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <com.zdlw.demo.dingdang.ui.view.CircleImageView
            android:id="@+id/civ_board_head"
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:border_color="@color/white"
            android:src="@drawable/tou"/>
        <TextView
            android:id="@+id/tv_board_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/civ_board_head"
            android:text="用户名称"
            android:textSize="14dp"
            android:textColor="@color/orangered"/>
        <TextView
            android:id="@+id/tv_board_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/civ_board_head"
            android:layout_below="@id/tv_board_name"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:text="wwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww"
            android:textSize="17dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_board_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"

            android:layout_below="@+id/tv_board_info"
            android:text="2017/12/12 19:00"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>