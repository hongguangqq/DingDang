<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zdlw.demo.dingdang.ui.activity.PersonActivity">
    <include layout="@layout/layout_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/beijing">
        <com.zdlw.demo.dingdang.ui.view.CircleImageView
            android:id="@+id/civ_person_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:border_color="@color/white"
            android:layout_centerInParent="true"
            android:src="@drawable/tou"/>
        <TextView
            android:id="@+id/tv_person_name"
            android:layout_below="@+id/civ_person_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textSize="16dp"
            android:text="用户名"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/sv_person_container"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/layout_privateinfo"/>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/rl_other_news"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/detail_bottom">
            <TextView
                android:id="@+id/tv_person_focus"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="关注"
                android:textSize="16dp"
                android:textColor="@color/orange"/>

            <TextView
                android:id="@+id/tv_person_communicator"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聊天"
                android:textSize="16dp"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/tv_person_report"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="举报"
                android:textSize="16dp"
                android:textColor="@color/red"/>
            <View
                android:layout_toRightOf="@id/tv_person_focus"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:background="@color/lightgray"
                android:layout_width="1dp"
                android:layout_height="match_parent">
            </View>
            <View
                android:layout_toLeftOf="@+id/tv_person_report"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:background="@color/lightgray"
                android:layout_width="1dp"
                android:layout_height="match_parent">

            </View>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
