<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zdlw.demo.dingdang.ui.activity.SendActivity"
    android:background="@mipmap/sky">
    <RelativeLayout
        android:id="@+id/rl_send_title"
        android:background="@color/flower_green"
        android:layout_width="fill_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_centerInParent="true"
            android:text="请填写发布的信息"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_send_back"
            android:layout_width="30dp"
            android:scaleType="center"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/icon_whiteback"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_send_item"
        android:layout_below="@+id/rl_send_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle|end"
        android:divider="@drawable/line_gray">
        <com.zdlw.demo.dingdang.ui.view.SettingItemView
            android:id="@+id/st_send_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftText="学级"
            app:rightText="请选择补课学级"/>
        <com.zdlw.demo.dingdang.ui.view.SettingItemView
            android:id="@+id/st_send_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftText="课程"
            app:rightText="请选择课程"/>
        <com.zdlw.demo.dingdang.ui.view.SettingItemView
            android:id="@+id/st_send_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftText="时间"
            app:rightText="请选择补课时间"/>
        <com.zdlw.demo.dingdang.ui.view.SettingItemView
            android:id="@+id/st_send_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftText="金额"
            app:rightText="请输入薪酬"/>

    </LinearLayout>
    <EditText
        android:id="@+id/et_send_msg"
        android:layout_below="@id/ll_send_item"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_ovil"
        android:maxLines="4"
        android:hint="请输入课程的简介"
        android:gravity="left"/>
    <Button
        android:id="@+id/btn_send_submit"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:text="发送"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:textColor="@color/white"/>
</RelativeLayout>