<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>

    <ScrollView
        android:id="@+id/sc_forget_contain"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_old"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
                <EditText
                    android:id="@+id/et_old"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="请输入当前密码"
                    android:paddingRight="30dp"
                    android:singleLine="true"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/iv_oldPwd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_x"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_new"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
                <EditText
                    android:id="@+id/et_new"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="请输入新密码"
                    android:paddingRight="30dp"
                    android:singleLine="true"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/iv_newPwd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_x"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_check"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
                <EditText
                    android:id="@+id/et_check"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="请再次输入新密码"
                    android:paddingRight="30dp"
                    android:singleLine="true"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/iv_checkPwd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_x"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="请输入新的联系方式"
                    android:paddingRight="30dp"
                    android:singleLine="true"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_x"
                    android:visibility="gone"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/et_introduction"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_corner2"
                android:hint="请输入您的自我介绍"
                android:textColor="@color/black"
                android:gravity="left|top"/>

            <Button
                android:id="@+id/btn_modify"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确认修改"
                android:background="@drawable/bg_btn"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>