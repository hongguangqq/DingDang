<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zdlw.demo.dingdang.ui.activity.CommunicateActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_communicator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#DCDCDC"
        android:orientation="horizontal">
        <View
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>
        <EditText
            android:id="@+id/et_communicator_send"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="3dp"
            android:id="@+id/btn_communicator_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/flower_green"
            android:text="发送" />
    </LinearLayout>
</LinearLayout>
